<%= content_for (:info_text_line) do %>
    <%= @post.title %>
<% end %>

<p id="title">
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p id= "body">
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="author">
  <strong>Authored By:</strong>
  <%= @post.author.email %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<%= render 'comments/form' %>
<%= render 'comments/table' %>

<%= link_to 'Back To Blog Feed', posts_path %>
