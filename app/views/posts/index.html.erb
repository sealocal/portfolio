<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.published? || policy(post).index? %>
        <tr id="<%= dom_id(post) %>">
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post %></td>
          <td>
            <% if current_user && policy(post).update? %>
              <%= link_to 'Edit', edit_post_path(post) %>
            <% end %>
          </td>
          <td>
            <% if current_user && policy(post).destroy? %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Post', new_post_path, class: "button radius" %>
<% end %>
