<%= content_for (:info_text_line) do %>
  posts
<% end %>


<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.published? || policy(post).index? %>
        <%= render partial: 'post', locals: {post: post} %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Post', new_post_path, id: "new_post_button", class: "button radius", remote: true %>
<% end %>
