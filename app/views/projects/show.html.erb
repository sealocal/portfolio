<%= content_for (:info_text_line) do %>
  <%= @project.name %>
<% end %>

<div class="project">
  <% if @project.image_processed? %>
    <%= link_to image_tag(@project.image_url(:thumb)), @project if @project.image? %>
  <% else %>
    <em>Processing...</em>
  <% end %>
  <div class="name"><%= @project.name %></div>
  <div class="actions">
    <%= link_to "edit", edit_project_path(@project) %> |
    <%= link_to "remove", @project, :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div>

<p><%= @project.image_url.to_s if @project.image_url %></p>

<p id="name">
  <strong>Name:</strong> <%= @project.name %>
</p>

<p id="technologies_used"
  <strong>Technologies used:</strong> <%= @project.technologies_used %>
</p>

<div class="nav">
  <%= link_to 'Projects', projects_path %> |
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<%= render 'comments/form' %>
<%= render 'comments/table' %>

<%= link_to 'Back to Projects Page', projects_path %>
